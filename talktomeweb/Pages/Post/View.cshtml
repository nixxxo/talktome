@page "/Post/{id:int}"
@model talktomeweb.Pages.Post.ViewModel
@inject SharedLibrary.Services.FlaggedPostService FlaggedPostService
@{
}
<div>
    <!-- Post content -->
    <div>
        @await Html.PartialAsync("_PostsPartial", Model.Posts)
    </div>
    <!-- Comments Section -->
    <div class="">
        @if (Model.CurrentUser != null && Model.CurrentUser.Status == SharedLibrary.Models.Status.Active)
        {
            <form method="post" class="flex flex-row gap-4 mt-4">
                <div class="w-full h-full flex flex-col gap-2">
                    <textarea
                        class="w-full placeholder-pink-500 py-2 px-4 bg-white border focus:border-2 border-pink-400 rounded-lg text-slate-900 focus:border-pink-600 focus:outline-none focus:ring focus:ring-opacity-40 focus:ring-pink-300 transition-all duration-150"
                        asp-for="CommentText" rows="1" placeholder="Add a comment..."></textarea>
                    <span asp-validation-for="CommentText" class="text-red-500 text-sm"></span>
                </div>
                <button
                    class="bg-gradient-to-tl max-h-10 from-pink-500 to-rose-500 py-2 px-8 text-white font-bold rounded hover:scale-110 transition-all duration-100"
                    type="submit">Comment</button>
            </form>
        }
        <h2 class="font-semibold text-start m-auto text-xl md:text-2xl mt-5 mb-2">Comments:</h2>
        @foreach (var comment in Model.Comments)
        {
            bool isFlaggedComment = Model._flagCommentService.GetFlagCommentByCommentId(comment.CommentId) != null ? true : false;
            var imagePath = "/images/users/" + comment.User.ImagePath ??
            "/images/default-profile.png";
            var profileLink = Url.Page("/Account/Profile", new { userId = comment.User.UserId });
            <div class="pb-6 mt-4">
                <div class="flex flex-row justify-between items-center">
                    <div class="flex flex-row gap-2 items-center">
                        <a href="@profileLink">
                            <img class="object-cover w-8 h-8 rounded-full" src="@imagePath" alt="Profile Image">
                        </a>
                        <div>
                            <a href="@profileLink" class="font-semibold">@comment.User.Username</a>
                            @if (!string.IsNullOrWhiteSpace(comment.Text))
                            {
                                <p class="text-sm">@comment.Text</p>
                            }
                        </div>
                    </div>
                    @if (Model.CurrentUser.UserId == comment.UserId && Model.CurrentUser.Status == SharedLibrary.Models.Status.Active)
                    {
                        <form method="post" asp-page-handler="DeleteComment" asp-route-id="@Model.Post.PostId"
                            asp-route-commentId="@comment.CommentId" class="ml-auto">
                            <button type="submit" class="text-red-500 hover:text-red-700">
                                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>
                            </button>
                        </form>
                    }
                    else if (!isFlaggedComment && Model.CurrentUser.Status == SharedLibrary.Models.Status.Active)
                    {
                        <form method="post" asp-page-handler="FlagHandler" asp-route-id="@Model.Post.PostId"
                            asp-route-fromUserId="@Model.CurrentUser.UserId" asp-route-commentId="@comment.CommentId"
                            class="d-inline">
                            <button type="submit" title="Flag Post" class="text-yellow-400 hover:text-yellow-600">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M3 3v1.5M3 21v-6m0 0 2.77-.693a9 9 0 0 1 6.208.682l.108.054a9 9 0 0 0 6.086.71l3.114-.732a48.524 48.524 0 0 1-.005-10.499l-3.11.732a9 9 0 0 1-6.085-.711l-.108-.054a9 9 0 0 0-6.208-.682L3 4.5M3 15V4.5" />
                                </svg>

                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>
